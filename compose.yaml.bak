services:
  java-eladmin:
    build:
      context: ./eladmin
      dockerfile: ../eladminDockerfile
    container_name: java-eladmin
    restart: unless-stopped
    depends_on:
      - redis
      - mysql
    networks:
      - eladmin-net
    ports:
      - "8080:8080" # Spring Boot backend
    # env_file: ./.env  # Uncomment if .env file exists in ./eladmin

  javascript-eladmin-web:
    build:
      context: ./eladmin-web
      dockerfile: ../eladmin-webDockerfile
    container_name: javascript-eladmin-web
    restart: unless-stopped
    init: true
    networks:
      - eladmin-net
    ports:
      - "8013:8013" # Vue frontend static server
    env_file: ./.env # Uncomment if .env file exists in ./eladmin-web

  redis:
    image: redis:latest
    container_name: redis
    restart: unless-stopped
    networks:
      - eladmin-net
    ports:
      - "6379:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    # No persistence configured by default; add volumes if needed

  mysql:
    image: mysql:latest
    container_name: mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: 123456
      MYSQL_DATABASE: eladmin_mp
    networks:
      - eladmin-net
    ports:
      - "3306:3306"
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
    volumes:
      - mysql-data:/var/lib/mysql

networks:
  eladmin-net:
    driver: bridge

volumes:
  mysql-data:
