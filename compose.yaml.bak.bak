services:
  js-eladmin-web:
    build:
      context: ./eladmin-web
    image: js-eladmin-web:latest
    container_name: js-eladmin-web
    restart: unless-stopped
    init: true
    # env_file: ./.env.production  # Uncomment if .env.production file exists
    ports:
      - "8013:8013"  # Vue app static server
    networks:
      - eladmin-net
    depends_on:
      - java-eladmin-system
    # The frontend may need to connect to the backend API at 8080

  java-eladmin-system:
    build:
      context: ./eladmin/eladmin-system
    image: java-eladmin-system:latest
    container_name: java-eladmin-system
    restart: unless-stopped
    ports:
      - "8080:8080"  # Spring Boot backend
    networks:
      - eladmin-net
    depends_on:
      - mysql
      - redis

  mysql:
    image: mysql:latest
    container_name: eladmin-mysql
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: eladmin
      MYSQL_DATABASE: eladmin
      MYSQL_USER: eladmin
      MYSQL_PASSWORD: eladmin
    ports:
      - "3306:3306"
    networks:
      - eladmin-net
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
    # volumes:
    #   - ./sql:/docker-entrypoint-initdb.d  # Uncomment to initialize DB with provided SQL

  redis:
    image: redis:latest
    container_name: eladmin-redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    networks:
      - eladmin-net
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

networks:
  eladmin-net:
    driver: bridge
